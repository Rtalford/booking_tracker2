<h1>Flights#new</h1>
<p>Find me in app/views/flights/new.html.erb</p>

<h3>Form</h3>

<%= form_with model: @flight do |f| %>

    <%= f.label :depart_date %> 
    <%= f.datetime_field :depart_date %> 

    <%= f.label :return_date %> 
    <%= f.datetime_field :return_date %> 

    <%= f.label :airline_id %> 
    <%= f.number_field :airline_id %> 

    <%= f.label :user_id %> 
    <%= f.number_field :user_id %> 


    <h2>Create a Booking </h2>

    <%= f.fields_for :airline do |a| %>
        <%= a.label :name %>
        <%= a.text_field :name %>
    <% end >%

    <%= f.submit "Create Booking" %>

<% end >%