<h1>Users#new</h1>
<p>Find me in app/views/users/new.html.erb</p>


<% if @user.errors.any? %>
  <div id="error_explanation">
    <ul>
      <% @user.errors.each do |error| %>
        <li><%= error.full_message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <br>
    <%= f.label :email %>
    <%= f.text_field :email %>
    <br>
    <%= f.label :password %>
    <%= f.pasword_field :password %>
    <br>
    <%= f.submit "Create a Booking" %>

<%= end %>